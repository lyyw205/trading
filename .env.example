# ===== Database (직접 PostgreSQL 연결) =====
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/postgres

# ===== Initial Admin (최초 실행 시에만 사용) =====
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=change-me-immediately

# ===== Encryption (쉼표 구분, 첫번째=최신) =====
# 생성: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEYS=newest-fernet-key,older-fernet-key

# ===== Session & CSRF =====
SESSION_SECRET_KEY=your-session-secret-here
CSRF_SECRET=your-csrf-secret-here

# ===== App =====
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000

# ===== Rate Limiting =====
API_RATE_LIMIT=1000
MAX_ACCOUNTS_PER_INSTANCE=20
THREAD_POOL_SIZE=20
